<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultadoActivity">

    <Button
            android:text="VOLTAR"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/buttonVoltar"
            style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
            android:textColor="#44F14C" tools:textSize="28sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textAllCaps="true"
            tools:fontFamily="@font/coming_soon"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/caraOuCoroa"
            app:layout_constraintStart_toStartOf="@+id/caraOuCoroa" app:layout_constraintEnd_toEndOf="@+id/caraOuCoroa"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            android:drawableLeft="?attr/actionModeCloseDrawable" app:backgroundTint="@color/white"
            android:background="@color/white"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/cara" android:id="@+id/caraOuCoroa"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonVoltar" app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:contentDescription="cara ou coroa"/>
</androidx.constraintlayout.widget.ConstraintLayout>